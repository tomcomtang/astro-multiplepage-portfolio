---
import Navigation from "../../components/Navigation.astro";
import Footer from "../../components/Footer.astro";
import { getPostBySlug, getAllPostSlugs } from "../../utils/getPosts";

// 生成所有可能的 slug 路径，用于静态生成
export async function getStaticPaths() {
  const slugs = getAllPostSlugs();
  return slugs.map((slug) => ({
    params: { slug },
  }));
}

// 获取 URL 中的 slug 参数
const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect("/posts/");
}

// 获取文章数据
const post = getPostBySlug(slug);

if (!post) {
  // 如果找不到文章，返回 404 或重定向到列表页
  return Astro.redirect("/posts/");
}

const { frontmatter, Content } = post;

// 确保 Content 组件存在
if (!Content) {
  console.error(`Content component not found for slug: ${slug}`);
  return Astro.redirect("/posts/");
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title} - Your Portfolio</title>
    <meta name="description" content={frontmatter.description} />
    <script>
      // 主题切换功能
      document.addEventListener("DOMContentLoaded", function () {
        const savedTheme = localStorage.getItem("theme") || "light";
        const prefersDark = window.matchMedia(
          "(prefers-color-scheme: dark)"
        ).matches;
        const initialTheme =
          savedTheme === "system"
            ? prefersDark
              ? "dark"
              : "light"
            : savedTheme;

        if (initialTheme === "dark") {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }

        // 监听系统主题变化
        window
          .matchMedia("(prefers-color-scheme: dark)")
          .addEventListener("change", (e) => {
            if (localStorage.getItem("theme") === "system") {
              if (e.matches) {
                document.documentElement.classList.add("dark");
              } else {
                document.documentElement.classList.remove("dark");
              }
            }
          });

        // 移除 markdown 内容中的第一个 h1 标题（避免与页面标题重复）
        const proseContainer = document.querySelector(".prose");
        if (proseContainer) {
          const firstH1 = proseContainer.querySelector("h1");
          if (firstH1) {
            firstH1.remove();
          }
        }
      });
    </script>
    <style>
      html,
      body {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow-x: hidden;
      }
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }
      main {
        flex: 1;
      }
      /* 确保Footer紧贴底部 */
      section[class*="text-gray-700"] {
        margin: 0;
        padding: 0;
        flex-shrink: 0;
      }
      /* 隐藏 markdown 内容中的第一个 h1 标题（避免与页面标题重复） */
      .prose h1:first-of-type,
      .prose > h1:first-child,
      article .prose h1:first-child {
        display: none !important;
      }
    </style>
  </head>
  <body class="bg-white dark:bg-neutral-900 transition-colors duration-300">
    <!-- 背景网格 - 覆盖整个body区域 -->
    <div class="fixed inset-0 z-0 pointer-events-none">
      <div
        class="absolute inset-0 bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:28px_48px] -z-10"
      >
      </div>
      <div
        class="absolute left-0 right-0 top-0 -z-10 m-auto h-[1200px] w-[1200px] rounded-full bg-neutral-400 opacity-10 blur-[100px]"
      >
      </div>
    </div>

    <!-- 主要内容区域 - 使用flex: 1填充空间 -->
    <main class="flex-1 relative z-10">
      <Navigation />

      <!-- 文章内容 -->
      <article class="relative z-20 w-[896px] mx-auto mt-24 mb-12 px-7 lg:px-0">
        <!-- 文章标题 -->
        <header class="text-center">
          <h1
            class="text-2xl font-bold tracking-tight text-neutral-900 dark:text-neutral-100 sm:text-3xl lg:text-4xl mb-1.5"
          >
            {frontmatter.title}
          </h1>
          <div
            class="flex items-center justify-center gap-4 text-sm text-neutral-600 dark:text-neutral-400 mb-1.5"
          >
            <time datetime={frontmatter.date || ""}>
              {
                frontmatter.date
                  ? new Date(frontmatter.date).toLocaleDateString("zh-CN", {
                      year: "numeric",
                      month: "long",
                      day: "numeric",
                    })
                  : ""
              }
            </time>
            <span>•</span>
            <span>{frontmatter.readTime}</span>
          </div>
        </header>

        <!-- 文章描述 -->
        {
          frontmatter.description && (
            <p class="text-lg text-neutral-600 dark:text-neutral-400 mb-16 text-center">
              {frontmatter.description}
            </p>
          )
        }

        <!-- Markdown 内容 - 使用 prose 类来应用 Tailwind Typography 样式 -->
        <div class="prose prose-neutral dark:prose-invert max-w-none">
          <Content />
        </div>
      </article>
    </main>

    <!-- Footer - 紧贴底部 -->
    <Footer />
  </body>
</html>
